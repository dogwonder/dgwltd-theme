---
permalink: '../src/assets/scss/modules/_tokens.scss'
---

{% set minWidth = 320 %}
{% set maxWidth = 1400 %}


:root {

  --logo: {% calculateClamp 384, 1280, minWidth, maxWidth %}
  --title: {% calculateClamp 28, 44, minWidth, maxWidth %}
  --text: {% calculateClamp 32, 48, minWidth, maxWidth %}
  --image {% calculateClamp 120, 220, minWidth, maxWidth %}
  --spacer: {% calculateClamp 24, 64, minWidth, maxWidth, false, 'container' %}

  /*Utopia generated tokens*/
  {%- for size in utopia.resultsSpace %}
  --space-{{ size.label }}: {{ size.clamp }}; //{{ size.minSize }}px - {{ size.maxSize }}px
  {%- endfor %}

  {%- for size in utopia.resultsStep %}
  --step-{{ size.label }}: {{ size.clamp }}; //{{ size.minSize }}px - {{ size.maxSize }}px
  {%- endfor %}
 
}